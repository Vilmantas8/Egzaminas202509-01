{
  "name": "statybines-technikos-tests",
  "version": "1.0.0",
  "description": "Comprehensive test suite for Construction Equipment Rental System",
  "main": "index.js",
  "scripts": {
    "test": "jest --runInBand",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "jest --coverage --runInBand",
    "test:auth": "jest unit-tests-auth.test.js --runInBand",
    "test:equipment": "jest unit-tests-equipment.test.js --runInBand",
    "test:reservations": "jest unit-tests-reservations.test.js --runInBand",
    "test:integration": "jest integration-tests-complete.test.js --runInBand",
    "test:verbose": "jest --verbose --runInBand",
    "test:silent": "jest --silent --runInBand",
    "test:all": "npm run test:auth && npm run test:equipment && npm run test:reservations && npm run test:integration"
  },
  "jest": {
    "testEnvironment": "node",
    "verbose": true,
    "collectCoverageFrom": [
      "../backend/**/*.js",
      "!../backend/node_modules/**",
      "!../backend/coverage/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000,
    "setupFilesAfterEnv": ["./test-setup.js"]
  },
  "keywords": ["jest", "testing", "mern", "construction", "equipment", "rental"],
  "author": "Development Team",
  "license": "ISC",
  "dependencies": {
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "mongoose": "^7.5.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.10.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}